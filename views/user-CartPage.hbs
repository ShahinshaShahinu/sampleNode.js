  <script>
    function increaseValue(proId) {
      var value = parseInt(document.getElementById(`number-${proId}`).value, 10);
      value = isNaN(value) ? 0 : value;
      value++;

      document.getElementById(`number-${proId}`).value = value;
    }

    function decreaseValue(proId) {
      var value = parseInt(document.getElementById(`number-${proId}`).value, 10);
      value = isNaN(value) ? 0 : value;
      value < 1 ? value = 1 : '';

      value--;

      document.getElementById(`number-${proId}`).value = value;
    }
  </script>










